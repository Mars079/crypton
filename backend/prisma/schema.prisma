generator client {
  provider = "prisma-client-js"
  output = env("PRISMA_OUTPUT")
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  hashpass      String
  refreshToken  String?
  createdAt     DateTime @default(now())
  verified      Boolean  @default(false)
}

model Ucodes {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  userId     String  @unique
  code       String  @unique
  hash       String?
  expiresAt  DateTime
}

model Stream {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  symbols    String[]
}

model Blacklist {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  count      Int      
}